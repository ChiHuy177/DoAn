@model ProjectA.Models.CategoryModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-wrapper">
    <div class="page-content-tab">
        <form method="post" enctype="multipart/form-data">
            <div class="row">

                <div class="col-lg-12 col-xxl-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="app-product-section">
                                <h1>Edit Category</h1>
                                <div class="main-title">
                                    <h6>General Information</h6>
                                </div>
                                <div>
                                    <div class="app-form">
                                        <div class="mb-3">
                                            <label class="form-label">ID</label>
                                            <input type="text" class="form-control" value="@Model.Id" readonly>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Name</label>
                                            <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Description</label>
                                            <input type="text" class="form-control" asp-for="Description" value="@Model.Description">
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="form-label">Parent ID</label>
                                            <input type="text" class="form-control" asp-for="ParentID" value="@Model.ParentID">
                                        </div>
                                    </div>
                                </div>

                                <div class="app-divider-v dashed"></div>





                                
                                
                                <div class="app-divider-v dashed"></div>

                            </div>
                            
                            <div class="col-12">
                                <div class="mt-4 d-flex justify-content-end gap-2 flex-column flex-sm-row text-end">
                                    <a class="btn btn-light-secondary" asp-action="CategoryList" asp-controller="Admin">Discard</a>
                                    <button class="btn btn-primary" type="submit">Edit Category</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </form>

    </div>


</div>


